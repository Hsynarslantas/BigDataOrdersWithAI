@model List<Customer>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>🧑‍🤝‍🧑 Müşteri Sayfası</h4>
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>#</th>
                                <th>Müşteri Resmi</th>
                                <th>Müşteri Adı</th>
                                <th>Müşteri Soyadı</th>
                                <th>Telefon Numarası</th>
                                <th>Email Adresi</th>
                                <th>Adres</th>
                                <th>Kullanıcı Profili</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><img src="@item.CustomerImageUrl" style="height:50px;width:70px;" /></td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.CustomerSurname</td>
                                    <td>@item.CustomerPhone</td>
                                    <td>@item.CustomerEmail</td>
                                    <td>@item.CustomerAddress</td>
                                    <td>
                                        <a href="/CustomerDetail/Index/@item.CustomerId" title="Kullancıyı Gör" style="font-size:22px;">👁️</a>
                                    </td>
                                    <td>
                                        <a href="/Customer/UpdateCustomer/@item.CustomerId" title="Güncelle" style="font-size:22px;">🖊️</a>
                                    </td>
                                    <td>
                                        <a href="/Customer/DeleteCustomer/@item.CustomerId" title="Sil" style="font-size:22px;">❌</a>
                                    </td>
                                </tr>
                            }
                        </table>
                        <a href="/Customer/CreateCustomer/" class="btn btn-default" style="background-color:turquoise">Yeni Müşteri Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="mt-3 text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Customer/CustomerList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                </li>
            }

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Customer/CustomerList?page=1">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="/Customer/CustomerList?page=@i">@i</a>
                    </li>
                }

                if (endPage < ViewBag.TotalPages)
                {
                    if (endPage < ViewBag.TotalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="/Customer/CustomerList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                    </li>
                }
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Customer/CustomerList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                </li>
            }

        </ul>
    </nav>
</div>


