<div class="col-lg-12">
    <div class="card">
        <ul class="row profile_state list-unstyled">
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-movie-alt col-amber"></i>
                    <h4>@ViewBag.CategoryCount</h4>
                    <span>Kategori Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-account text-success"></i>
                    <h4>@ViewBag.CustomerCount</h4>
                    <span>Müşteri Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-star-circle col-red"></i>
                    <h4>@ViewBag.ProductCount</h4>
                    <span>Ürün Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-vibration col-red"></i>
                    <h4>@ViewBag.OrderCount</h4>
                    <span>Sipariş Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-money col-green"></i>
                    <h4>@ViewBag.TotalRevenue.ToString("#,##0.00") €</h4>
                    <span>Toplam Ciro / €</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-balance-wallet col-cyan"></i>
                    <h4>@ViewBag.AvgBasketOrder.ToString("F2") €</h4>
                    <span>Ortalama Sepet Tutarı / €</span>
                </div>
            </li>
        </ul>
    </div>
</div>
