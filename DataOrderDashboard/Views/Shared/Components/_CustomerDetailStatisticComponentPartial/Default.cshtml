<div class="col-lg-12">
    <div class="card">
        <ul class="row profile_state list-unstyled">
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-shopping-cart col-amber"></i>
                    <h4>@ViewBag.TotalOrderCount</h4>
                    <span>Sipariş Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-check-all text-success"></i>
                    <h4>@ViewBag.TotalCompletedOrderCount</h4>
                    <span>Tamamlanan Sipariş Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-delete col-red"></i>
                    <h4>@ViewBag.TotalCanceledOrderCount</h4>
                    <span>İptal Edilen Sipariş Sayısı</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-globe-alt col-red"></i>
                    <h4>
                        @if (ViewBag.GetCustomerIdByCountry != null)
                        {
                            <span>@ViewBag.GetCustomerIdByCountry</span>
                        }
                        else
                        {
                            <span>Belirtilmemiş</span>
                        }
                    </h4>
                    <span>Müşterinin Ülkesi</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-money col-green"></i>
                    <h4>
                        @if (ViewBag.GetCustomerIdByCity != null)
                        {
                            <span>@ViewBag.GetCustomerIdByCity</span>
                        }
                        else
                        {
                            <span>Belirtilmemiş</span>
                        }
                    </h4>
                    <span>Müşterinin Şehri</span>
                </div>
            </li>
            <li class="col-lg-2 col-md-4 col-6">
                <div class="body">
                    <i class="zmdi zmdi-balance-wallet col-cyan"></i>
                    <h4>@ViewBag.TotalSpentForCustomer.ToString("N2")  €</h4>
                    <span>Toplam Harcanan Tutar</span>
                </div>
            </li>
        </ul>
    </div>
</div>
