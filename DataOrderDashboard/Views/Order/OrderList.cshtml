@model List<Order>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12"> 
                <div class="card">
                    <div class="body">
                        <h4>🚚 Sipariş Sayfası</h4>
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>#</th>
                                <th>Sipariş Eden Kişi</th>
                                <th>Sipariş Edilen Ürün</th>
                                <th>Sipariş Adedi</th>
                                <th>Sipariş Tutarı / €</th>
                                <th>Ödeme Yöntemi</th>
                                <th>Sipariş Durumu</th>
                                <th>Sipariş Notu</th>
                                <th>Sipariş Tarihi</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Customer.CustomerName @item.Customer.CustomerSurname</td>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@((item.Quantity * item.Product.UnitPrice).ToString("F2")) €</td>
                                    <td>@item.PaymentMethod</td>
                                    <td>@item.OrderStatus</td>
                                    <td>@item.OrderNotes</td>
                                    <td>@item.OrderDate.ToShortDateString()</td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-success">Güncelle</a></td>
                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </table>
                        <a href="/Order/CreateOrder/" class="btn btn-default" style="background-color:turquoise">Yeni Sipariş Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="mt-3 text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Order/OrderList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                </li>
            }

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Order/OrderList?page=1">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="/Order/OrderList?page=@i">@i</a>
                    </li>
                }

                if (endPage < ViewBag.TotalPages)
                {
                    if (endPage < ViewBag.TotalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="/Order/OrderList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                    </li>
                }
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Order/OrderList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                </li>
            }

        </ul>
    </nav>
</div>

