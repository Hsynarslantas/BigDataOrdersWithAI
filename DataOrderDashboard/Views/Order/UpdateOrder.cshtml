@model Order
@{
    ViewData["Title"] = "UpdateOrder";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>🚚 Sipariş Güncelleme Sayfası</h4>
                        <form method="post">
                            <label>Müşteri Adı</label>
                            <input type="text" asp-for="Customer.CustomerName" class="form-control" />
                            <br />
                            <label>Müşteri Soyadı</label>
                            <input type="text" asp-for="Customer.CustomerName" class="form-control" />
                            <br />
                            <label>Ürün Adı</label>
                            <input type="text" asp-for="Product.ProductName" class="form-control" />
                            <br />
                            <label>Sipariş Tarihi</label>
                            <input type="text" asp-for="OrderDate" class="form-control" />
                            <br />
                            <label>Sipariş Durumu</label>
                            <input type="text" asp-for="OrderStatus" class="form-control" />
                            <br />
                            <label>Sipariş Notu</label>
                            <input type="text" asp-for="OrderNotes" class="form-control" />
                            <br />
                            <label>Ödeme Yöntemi</label>
                            <input type="text" asp-for="PaymentMethod" class="form-control" />
                            <br />
                            <label>Sipariş Adedi</label>
                            <input type="text" asp-for="Quantity" class="form-control" />
                            <br />
                            <button class="btn btn-info">Siparişi Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

