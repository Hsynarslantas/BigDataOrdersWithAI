@model List<ResultLoyaltyScoreMlDataModel>
@{
    ViewData["Title"] = "EnglandLoyaltyScoreWithML";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>
                            <img src="https://flagcdn.com/w20/gb.png" title="İngiltere" alt="" style="width:28px;height:auto;vertical-align:middle;margin-right:8px;" />
                            İngiltere  Müşteri Sadakat Loyalty Skor Tablosu ML İle 
                        </h4>
                        <small class="text-muted">
                            Bu Tablo Son Alışveriş Tarihi , Sipariş Sayısı ve Toplam Harcama
                            Kriterlerine  Göre Makine Öğrenmesi ile Hesaplanmıştır
                        </small>
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı</th>
                                <th>Son Siparişten Sonra Geçen Gün</th>
                                <th>Sipariş Sayısı </th>
                                <th>Toplam Harcama / €</th>
                                <th>Güncel Sadakat Skoru</th>
                                <th>Tahmini Sadakat Skoru</th>

                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Recency</td>
                                    <td>@item.Frequency</td>
                                    <td>@item.Monetary.ToString("N2") €</td>
                                    <td class="@GetLoyaltyColor(item.ActualLoyaltyScore)">@item.ActualLoyaltyScore</td>
                                    <td class="@GetLoyaltyColor(item.PredictedLoyaltyScore)">@item.PredictedLoyaltyScore</td>
                                </tr>
                            }
                        </table>
                        @functions{
                            public string GetLoyaltyColor(double score)
                            {
                                if (score >= 80)
                                    return "text-success fw-bold";
                                else if (score >= 50)
                                    return "text-warning fw bold";
                                else
                                    return "text-danger fw bold";
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


