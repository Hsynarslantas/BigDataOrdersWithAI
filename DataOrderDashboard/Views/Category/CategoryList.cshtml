@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>🧮 Kategori Sayfası</h4>
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>#</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CategoryName</td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                    <td></td>
                                </tr>
                            }
                        </table> 
                        <a href="/Category/CreateCategory/" class="btn btn-default" style="background-color:turquoise">Yeni Kategori Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

