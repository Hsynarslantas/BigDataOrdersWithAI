@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>🔔 Yorum Sayfası</h4>
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı</th>
                                <th>Konu</th>
                                <th>Mesaj Durumu</th>
                                <th>Mesaj Tarihi</th>
                                <th>Mesajın İçeriği</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Customer.CustomerName @item.Customer.CustomerSurname</td>
                                    <td>@item.MessageSubject</td>
                                    <td>@item.SentimentLabel</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <button data-id="@item.MessageId" class="btn btn-info openMessageBtn">Mesajı Aç</button>
                                    </td>
                                    <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-success">Güncelle</a></td>
                                    <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </table>
                        <a href="/Message/CreateMessage/" class="btn btn-info">Yeni Yorum Girişi</a>

                        <div class="modal fade" id="messageModal" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title">
                                            <i class="zmdi zmdi-email-open"></i> Mesaj Detayı
                                        </h5>
                                        <button type="button" class="close text-white" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <h5 id="msgSubject" class="font-weight-bold"></h5>
                                        <p class="text-muted mb-2">
                                            <i class="zmdi zmdi-account"></i> <span id="msgSender"></span> |
                                            <i class="zmdi zmdi-time"></i> <span id="msgDate"></span> |
                                            <i class="zmdi zmdi-info-outline"></i> <span id="msgSentiment"></span>
                                        </p>
                                        <hr>
                                        <p id="msgContent" style="font-size: 15px;"></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="mt-3 text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Message/Index?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                </li>
            }

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Message/Index?page=1">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="/Message/Index?page=@i">@i</a>
                    </li>
                }

                if (endPage < ViewBag.TotalPages)
                {
                    if (endPage < ViewBag.TotalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="/Message/Index?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                    </li>
                }
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Message/Index?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                </li>
            }

        </ul>
    </nav>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).on("click", ".openMessageBtn", function () {
        var id = $(this).data("id");

        $.ajax({
            url: "/Message/GetMessageDetail",
            data: { id: id },
            success: function (res) {
                if (!res.success) return;

                $("#msgSubject").text(res.subject);
                $("#msgSender").text(res.sender);
                $("#msgContent").text(res.content);
                $("#msgDate").text(res.date);
                $("#msgSentiment").text(res.sentiment);

                $("#messageModal").modal("show");
            }
        });
    });
</script>

