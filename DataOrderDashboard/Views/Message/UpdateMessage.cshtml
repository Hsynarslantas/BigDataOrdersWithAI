@model Message
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>🔔 Mesaj Güncelleme Sayfası</h4>
                        <form method="post">
                            <input type="hidden" asp-for="MessageId" />
                            <label>Müşteri</label>
                            <input type="text" asp-for="CustomerId" class="form-control" />
                            <br />
                            <label>Mesaj Başlığı</label>
                            <input type="text" asp-for="MessageSubject" class="form-control" />
                            <br />
                            <label>Mesaj</label>
                            <input type="text" asp-for="MessageText" class="form-control" />
                            <br />
                            <label>Mesaj Duygu Durumu</label>
                            <input type="text" asp-for="SentimentLabel" class="form-control" />
                            <br />
                            <label>Mesaj Tarihi</label>
                            <input type="date" asp-for="CreatedDate" class="form-control" />
                            <br />
                            <button class="btn btn-info">Mesajı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

