@model Message
@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <h4>🔔 Mesaj Oluşturma Sayfası</h4>
                        <form method="post">
                            <form method="post">
                                <label>Müşteri Id</label>
                                <input type="text" asp-for="CustomerId" class="form-control" />
                                <br />
                                <label>Konu</label>
                                <input type="text" asp-for="MessageSubject" class="form-control" />
                                <br />
                                <label>Mesaj İçeriği</label>
                                <textarea rows="5" class="form-control" asp-for="MessageText"></textarea>
                                <br />
                                <button class="btn btn-info">Mesajı Oluştur</button>
                            </form>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

